{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2023",
    "lib": ["ES2023"],
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "server/**/*.ts",
    "server/types/**/*.d.ts",
    "types/**/*.d.ts",
    "db/**/*.ts",
    "src/types/**/*.ts",
    "src/utils/**/*.ts",
    "knexfile.js",
    "scripts/devMigrate.js"
  ]
}
